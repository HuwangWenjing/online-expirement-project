from django.shortcuts import render

from job.models import *
def add_teacher(request):
    '''管理员添加教师'''
    Major = (
        '信息管理与信息系统', '计算机科学', '电子商务',
        '会计', '金融学', '法学',
        '英语', '汉语文学',
    )

    sex = ('男', '女')
    is_add = True
    TeaNo = request.POST.get('TeaNo')
    TeaName = request.POST.get('TeaName')
    TeaSex = request.POST.get('TeaSex')
    TeaPassWord= request.POST.get('TeaPassWord')
    teacher.objects.create(
        TeaNo=TeaNo, TeaName=TeaName, TeaSex=TeaSex,
        TeaPassWord=TeaPassWord,
    )
    user.objects.create(
        account=TeaNo, password=TeaPassWord, identity='教师', name=TeaName,
    )
    return render(request, 'teacher/add_teacher.html',
                  {'sex': sex,'Major': Major, 'is_add': is_add})
